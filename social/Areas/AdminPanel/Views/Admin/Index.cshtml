@model IEnumerable<social.Models.Entity.VisitorHits>
@inject social.Models.Contextsocial db
@using System.Globalization;



@using social.Utilities
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminPanel/Views/Shared/_Adminmaster.cshtml";
    //today
    DateTime date = Convert.ToDateTime(DateTime.Now);
    string persianDateString = date.ToString("yyyy/MM/dd", new CultureInfo("fa-IR"));
    var querytoday = db.VisitorHits.Where(v => v.DateTime.Equals(persianDateString));


    int todayvisit = querytoday.Sum(c => c.VisitHit);
    int todayvisitor = querytoday.Count();
    //all
    var queryall = db.VisitorHits.ToList();
    int allvisit = queryall.Sum(e => e.VisitHit);
    int allvisitor = queryall.Count();

}




